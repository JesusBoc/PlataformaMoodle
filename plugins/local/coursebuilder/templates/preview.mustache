<h2 class="mb-4">Vista previa — Generación de cursos</h2>

<div class="local-coursebuilder-preview">

    <div class="mb-3">
        <span class="badge badge-primary">
            Cohortes: {{cohortcount}}
        </span>
        <span class="badge badge-success ml-2">
            Cursos a crear: {{createcount}}
        </span>
    </div>

    {{#cohorts}}
    <div class="card mb-4" style="max-width: 500px; margin:auto">
        <div class="card-header">
            <strong>{{name}}</strong> - {{year}}
        </div>

        <ul class="list-group list-group-flush">
            {{#actions}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    {{#icon}}
                        {{#pix}}
                            {{icon}}, core
                        {{/pix}}
                    {{/icon}}
                    <strong>{{fullname}}</strong>
                    <br>
                    <small class="text-muted">{{shortname}}</small>
                </div>

                <span class="badge badge-{{badge}}">
                    {{label}}
                </span>
            </li>
            {{/actions}}
        </ul>
    </div>
    {{/cohorts}}

</div>
