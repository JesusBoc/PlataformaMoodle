<tr data-subjectid="{{subjectid}}">
    
    <td>
        {{subjectname}}
    </td>

    <td>
        {{#teachername}}
            {{teachername}}
        {{/teachername}}
        {{^teachername}}
            <span class="text-muted">Sin asignar</span>
        {{/teachername}}
    </td>

    <td>
        <span class="badge badge-{{status}}">
            {{statuslabel}}
        </span>
    </td>

    <td class="text-right">
        {{#canassign}}
            <button class="btn btn-sm btn-outline-primary js-assign">
                Asignar
            </button>
        {{/canassign}}

        {{#canretry}}
            <button class="btn btn-sm btn-outline-warning js-retry">
                Reintentar
            </button>
        {{/canretry}}
    </td>

</tr>
