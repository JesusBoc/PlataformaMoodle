<tr data-subjectid="{{subjectid}}">
    
    <td>
        {{subjectname}}
    </td>

    <td>
        {{#teachername}}
            {{teachername}}
        {{/teachername}}
        {{^teachername}}
            <span class="text-muted">Sin asignar</span>
        {{/teachername}}
    </td>

    <td>
        <span class="badge badge-{{statusbadge}}"
        style="white-space:normal; word-break:break-word;text-align:center">
            {{statuslabel}}
        </span>
    </td>

    <td class="text-right">
        {{#canassign}}
            <button class="btn btn-sm btn-outline-primary js-assign"
            data-subjectid="{{subjectid}}"
            data-cohortid="{{cohortid}}"
            data-teacherid="{{teacherid}}"
            >
                Asignar
            </button>
        {{/canassign}}

        {{#canretry}}
            <button class="btn btn-sm btn-outline-warning js-retry"
            data-subjectid="{{subjectid}}"
            data-cohortid="{{cohortid}}"
            data-teacherid="{{teacherid}}">
                Reintentar
            </button>
        {{/canretry}}
    </td>

</tr>
