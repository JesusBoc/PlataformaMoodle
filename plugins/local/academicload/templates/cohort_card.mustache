<div class="card mb-4 cohort-card" data-cohortid="{{cohortid}}">
    
    {{! ===== Header ===== }}
    <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-md-center">
        
        <div class="mb-2 mb-md-0">
            <h5 class="mb-0">
                {{name}}
                <small class="text-muted">Â· {{year}}</small>
            </h5>
        </div>

        <div class="cohort-stats d-flex flex-wrap gap-2">
            <span class="badge badge-secondary">
                {{#str}} total, local_academicload {{/str}}: {{total}}
            </span>
            <span class="badge badge-success">
                {{#str}} applied, local_academicload {{/str}}: {{applied}}
            </span>
            <span class="badge badge-warning">
                {{#str}} pending, local_academicload {{/str}}: {{pending}}
            </span>
            <span class="badge badge-danger">
                {{#str}} error, local_academicload {{/str}}: {{error}}
            </span>
        </div>

    </div>

    {{! ===== Body ===== }}
    <div class="card-body p-0">

        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <colgroup>
                    <col style="width: 35%">
                    <col style="width: 35%">
                    <col style="width: 15%">
                    <col style="width: 15%">
                </colgroup>
                <thead class="thead-light">
                    <tr>
                        <th>{{#str}} subject, local_academicload {{/str}}</th>
                        <th>{{#str}} teacher, local_academicload {{/str}}</th>
                        <th>{{#str}} status, local_academicload {{/str}}</th>
                        <th class="text-right">{{#str}} actions, local_academicload {{/str}}</th>
                    </tr>
                </thead>

                <tbody>
                    {{#assignments}}
                        {{> local_academicload/assignment_row }}
                    {{/assignments}}

                    {{^assignments}}
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No hay asignaciones configuradas
                            </td>
                        </tr>
                    {{/assignments}}
                </tbody>
            </table>
        </div>

    </div>

</div>
