<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/curriculum/db"
       VERSION="2025121300"
       COMMENT="Curriculum plugin tables"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd">

  <TABLES>

    <!-- ========================= -->
    <!-- Tabla de planes de estudio -->
    <!-- ========================= -->
    <TABLE NAME="local_curriculum_plan" COMMENT="Study plans by category">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
        <FIELD NAME="categoryid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Course category (level)"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Plan name"/>
        <FIELD NAME="version" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="1" COMMENT="Plan version"/>
        <FIELD NAME="active" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" COMMENT="Active plan flag"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Creation time"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Last modification"/>
      </FIELDS>

      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>

      <INDEXES>
        <INDEX NAME="idx_category_active" UNIQUE="false" FIELDS="categoryid, active"/>
      </INDEXES>
    </TABLE>

    <!-- ============================== -->
    <!-- Tabla de asignaturas por plan  -->
    <!-- ============================== -->
    <TABLE NAME="local_curriculum_plan_subjects" COMMENT="Subjects per study plan">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true" COMMENT="Primary key"/>
        <FIELD NAME="planid" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Related plan"/>
        <FIELD NAME="subjectname" TYPE="char" LENGTH="255" NOTNULL="true" COMMENT="Subject name"/>
        <FIELD NAME="ihs" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Weekly hours"/>
        <FIELD NAME="sortorder" TYPE="int" LENGTH="10" NOTNULL="true" COMMENT="Display order"/>
      </FIELDS>

      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="plan_fk" TYPE="foreign" FIELDS="planid" REFTABLE="local_curriculum_plan" REFFIELDS="id"/>
      </KEYS>

      <INDEXES>
        <INDEX NAME="idx_planid" UNIQUE="false" FIELDS="planid"/>
      </INDEXES>
    </TABLE>

  </TABLES>
</XMLDB>
